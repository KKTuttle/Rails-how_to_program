<h1><%= @section.name %></h1>

<ul>
  <% @section.lessons.order(:number).each do |lesson|%>
    <li><%= link_to lesson.title, section_lesson_path(@section,lesson) %></li>
  <%end%>
</ul>


<p><%= link_to 'New Lesson', new_section_lesson_path(@section) %></p>
<p><%= link_to "Edit", edit_section_path(@section) %></p>
<p><%= link_to "Delete", section_path(@section),
  :data=>{:confirm => "Are you sure?", :method => 'delete'}%></p>
<br>
<p><%= link_to "Return to Sections", sections_path %></p>
<p><%= link_to "Return to Chapters", chapters_path %></p>
