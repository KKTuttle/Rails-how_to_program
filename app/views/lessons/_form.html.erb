<%= render 'layouts/errors', :object => @lesson %>

<%= form_for [@section, @lesson] do |f| %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.collection_select :section_id, Section.order(:name),:id,:name, include_blank: false %>

  <%= f.submit %>
<%end%>
